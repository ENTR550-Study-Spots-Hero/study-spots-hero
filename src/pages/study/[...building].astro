---
import { type CollectionEntry, getCollection } from "astro:content";
import StudySpot from "../../layouts/StudySpot.astro";

export async function getStaticPaths() {
    const spots = await getCollection("studySpot");
    return spots.map((spot) => ({
        params: { building: spot.slug },
        props: spot,
    }));
}
type Props = CollectionEntry<"studySpot">;

const spot = Astro.props;
const { Content } = await spot.render();

// Per building page
---

<StudySpot {...spot.data}>
    <Content />
</StudySpot>
