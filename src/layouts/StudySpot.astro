---
import type { CollectionEntry } from "astro:content";
import Card from "../components/Card.astro";
type Props = CollectionEntry<"studySpotCollection">;

// skeleton for generating a study spot post from a markdown file
const { Content } = await Astro.props.render();
const { data: spot } = Astro.props;
---

<style>
    main {
        width: calc(100% - 2em);
        max-width: 100%;
        margin: 0 auto;
    }
    .spot-image {
        margin: 0 auto;
        width: 720px;
    }
    .spot-image img {
        display: block;
        margin: 0 auto;
        border-radius: 12px;
        box-shadow: var(--box-shadow);
    }
    .card-container {
        margin: 60px auto 0px;
    }
    .prose {
        width: 720px;
        max-width: calc(100% - 2em);
        margin: auto;
        padding: 1em;
        color: rgb(var(--gray-dark));
    }
    .title {
        margin-bottom: 1em;
        padding: 1em 0;
        text-align: center;
        line-height: 1;
    }
    .title h1 {
        margin: 0 0 0.5em 0;
    }
    .date {
        margin-bottom: 0.5em;
        color: rgb(var(--gray));
    }
    .last-updated-on {
        font-style: italic;
    }
</style>
<article>
    <div class="spot-image">
        {
            spot.image && (
                <img width={1020} height={250} src={spot.image} alt="" />
            )
        }
    </div>

    <div class="card-container">
        <Card {...spot} />
    </div>

    <div class="prose">
        <Content />
    </div>
</article>
