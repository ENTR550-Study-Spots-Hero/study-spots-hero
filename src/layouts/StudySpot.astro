---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Card from "../components/Card.astro";
type Props = CollectionEntry<"studySpot">["data"];

const { title, building, floor, image } = Astro.props;

// skeleton for generating a study spot post from a markdown file
---

<html lang="en">
<head>
    <BaseHead title={title} description={building + " " + floor} />
    <style>
        main {
            width: calc(100% - 2em);
            max-width: 100%;
            margin: 0 auto;
        }
        .spot-image {
            margin: 0 auto;
            width: 720px;
        }
        .spot-image img {
            display: block;
            margin: 0 auto;
            border-radius: 12px;
            box-shadow: var(--box-shadow);
        }
        .card-container {
            margin: 60px auto 0px;
        }
        .prose {
            width: 720px;
            max-width: calc(100% - 2em);
            margin: auto;
            padding: 1em;
            color: rgb(var(--gray-dark));
        }
        .title {
            margin-bottom: 1em;
            padding: 1em 0;
            text-align: center;
            line-height: 1;
        }
        .title h1 {
            margin: 0 0 0.5em 0;
        }
        .date {
            margin-bottom: 0.5em;
            color: rgb(var(--gray));
        }
        .last-updated-on {
            font-style: italic;
        }
    </style>
</head>

<body>
    <Header />
    <main>
        <article>
            <div class="spot-image">
                {
                    image && (
                        <img
                            width={1020}
                            height={250}
                            src={image}
                            alt=""
                        />
                    )
                }
            </div>

            <div class="card-container">
                <Card {...Astro.props}/>
            </div>

            <div class="prose">
                <!-- <div class="title">
                    <div class="date">
                        <FormattedDate date={createdDate} />
                        {
                            updatedDate && (
                                <div class="last-updated-on">
                                    Last updated on{" "}
                                    <FormattedDate date={updatedDate} />
                                </div>
                            )
                        }
                    </div>
                    <h1>{title}</h1>
                    <hr />
                </div> -->
                <slot />
            </div>
        </article>
    </main>
    <Footer />
</body>
</html>
