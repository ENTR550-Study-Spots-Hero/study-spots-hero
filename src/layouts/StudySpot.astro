---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
type Props = CollectionEntry<"studySpot">["data"];

const { title, building, floor, hasCaenAccess, hasFood, createdDate, updatedDate, image } = Astro.props;

// skeleton for generating a study spot post from a markdown file
---

<html lang="en">
<head>
    <BaseHead title={title} description={building + " " + floor} />
    <style>
        main {
            width: calc(100% - 2em);
            max-width: 100%;
            margin: 0;
        }
        .spot-image {
            width: 100%;
        }
        .spot-image img {
            display: block;
            margin: 0 auto;
            border-radius: 12px;
            box-shadow: var(--box-shadow);
        }
        .prose {
            width: 720px;
            max-width: calc(100% - 2em);
            margin: auto;
            padding: 1em;
            color: rgb(var(--gray-dark));
        }
        .title {
            margin-bottom: 1em;
            padding: 1em 0;
            text-align: center;
            line-height: 1;
        }
        .title h1 {
            margin: 0 0 0.5em 0;
        }
        .date {
            margin-bottom: 0.5em;
            color: rgb(var(--gray));
        }
        .last-updated-on {
            font-style: italic;
        }
    </style>
    <style>
        .card {
            border: 1px solid #ccc;
            border-radius: 10px;
            padding: 20px;
            margin: 20px;
            box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.1);
            max-width: 500px;
        }
        .card-title {
            font-size: 24px;
            margin-bottom: 10px;
        }
        .icon-container {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-top: 10px;
        }
        .icon {
            display: flex;
            flex-direction: column;
            align-items: center;
            font-size: 14px;
        }
        .icon img {
            width: 24px;
            height: 24px;
            margin-bottom: 5px;
        }
    </style>
</head>

<body>
    <Header />
    <main>
        <article>
            <div class="spot-image">
                {
                    image && (
                        <img
                            width={1020}
                            height={250}
                            src={image}
                            alt=""
                        />
                    )
                }
            </div>

            <div class="card" style="margin-left:auto; margin-right:auto">
                <div class="card-title">{title}</div>
                <div class="icon-container">
                    <div class="icon" title="Quiet Area">
                        <img src="/icons/volume-small.png" alt="Quiet Area Icon">
                        <span>Quiet</span>
                    </div>
                    <div class="icon" title="Collaborative Area">
                        <img src="/icons/peoples.png" alt="Collaborative Icon">
                        <span>Collab</span>
                    </div>
                    <div class="icon" title="CAEN Access">
                        <img src="/icons/code-computer.png" alt="CAEN Access Icon">
                        <span>CAEN</span>
                    </div>
                    <div class="icon" title="Natural Light">
                        <img src="/icons/light.png" alt="Natural Light Icon">
                        <span>Light</span>
                    </div>
                    <div class="icon" title="Outlets Available">
                        <img src="/icons/outdoor.png" alt="Outlets Icon">
                        <span>Outlets</span>
                    </div>
                    <div class="icon" title="Reservable">
                        <img src="/icons/tickets-checked.png" alt="Reservable Icon">
                        <span>Reserve</span>
                    </div>
                    <div class="icon" title="Has Food Nearby">
                        <img src="/icons/tea-drink.png" alt="Food Icon">
                        <span>Food</span>
                    </div>
                </div>
            </div>

            <div class="prose">
                <!-- <div class="title">
                    <div class="date">
                        <FormattedDate date={createdDate} />
                        {
                            updatedDate && (
                                <div class="last-updated-on">
                                    Last updated on{" "}
                                    <FormattedDate date={updatedDate} />
                                </div>
                            )
                        }
                    </div>
                    <h1>{title}</h1>
                    <hr />
                </div> -->
                <slot />
            </div>
        </article>
    </main>
    <Footer />
</body>
</html>


